# Database Configuration (REQUIRED)
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB, use: mongodb://localhost:27017
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=HelixMed

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Security (REQUIRED - Generate a strong secret key)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=data/uploads
MAX_FILE_SIZE=104857600

# ML Models
MODEL_DIR=models

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/genomeguard.log